    //- Add class header
    script.
        $(document).ready(function(){
            $(window).scroll(function(){
                if($(this).scrollTop()>30){
                    $(".header-middle").addClass("header-extra");
                }else{
                    $(".header-middle").removeClass("header-extra");
                }
            });
        });
    //- Back to top
    script.
        $(document).ready(function(){
            $(window).scroll(function(){
                if($(this).scrollTop()>50){
                    $("#back-to-top").fadeIn();
                }else{
                    $("#back-to-top").fadeOut();
                }
            });
            $("#back-to-top").click(function(){
                $("html , body").animate({
                    "scrollTop":0,
                },1000)
            });
        });
